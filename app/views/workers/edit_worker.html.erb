<!DOCTYPE html>
<html>
   <body>
        <div id="wrapper" class="clearfix">
            <!-- 左カラム　開始 -->
            <div id="leftColumn">
                <hr class=straghtline>
                <h3>登録情報変更</h3>
                <hr class=dotline>
                
                <% @worker.errors.full_messages.each do |message| %>
                    <div class="form-error">
                        <%= message %>
                    </div>
                <% end %>
                
                <%= form_tag("/workers/#{@worker.id}/update") do %>
                    <p>名前</p>
                    <input class=signup name="name" value="<%= @worker.name %>">
                    <p>メールアドレス</p>
                    <input class=signup placeholder="me@example.com" name="email" value="<%= @worker.email %>">
                    <p>パスワード</p>
                    <input class=signup placeholder="********" name="password" value="<%= @worker.password %>" type="password">
                    <select name="status" value="<%= @worker.status %>" required>
                        <option value="staff">staff</option>
                        <option value="master">master</option>
                    </select>
                
                    <input class="button_signup" type="submit" value="変更">
                <% end %>
            </div>
            <!-- 左カラム　終了 -->
        
            <!-- 右カラム　開始 -->
            <div id="rightColumn">
                右ナビエリア
            </div>
            <!-- 右カラム　終了 -->
        </div>
      
      
      
      
  </body>