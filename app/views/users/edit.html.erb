<!DOCTYPE html>
<html>
   <body>
        <div id="wrapper" class="clearfix">
            <!-- 左カラム　開始 -->
            <div id="leftColumn">
                <hr class=straghtline>
                <h3>会員情報変更</h3>
                <hr class=dotline>
                
                <% @user.errors.full_messages.each do |message| %>
                    <div class="form-error">
                        <%= message %>
                    </div>
                <% end %>
                
                <%= form_tag("/users/#{@user.id}/update") do %>
                    <p>メールアドレス</p>
                    <input class=signup placeholder="me@example.com" name="email" value="<%= @user.email %>">
                    <p>パスワード</p>
                    <input class=signup placeholder="********" name="password" value="<%= @user.password %>" type="password">
                
                    <input class="button_signup" type="submit" value="変更">
                <% end %>
            </div>
            <!-- 左カラム　終了 -->
        
            <!-- 右カラム　開始 -->
            <div id="rightColumn">
                右ナビエリア
            </div>
            <!-- 右カラム　終了 -->
        </div>
      
      
      
      
  </body>