<!DOCTYPE html>
<html>
   <body>
        <div id="wrapper" class="clearfix">
            <!-- 左カラム　開始 -->
            <div id="leftColumn">
                <hr class=straghtline>
                <h3>メールアドレスでログイン・登録</h3>
                <hr class=dotline>
                
                <% if @error_message%>
                    <div class="form-error">
                        <%= @error_message %>
                    </div>
                <% end %>
                
                <%= form_tag("/login") do %>
                    <p>メールアドレス</p>
                    <input class=signup placeholder="me@example.com" name="email" value="<%= @email %>">
                    <p>パスワード</p>
                    <input class=signup placeholder="********" name="password" type="password" value="<%= @password %>">
                
                    <input class="button_signup" type="submit" value="ログイン">
                <% end %>
                
            
                
            </div>
            <!-- 左カラム　終了 -->
        
            <!-- 右カラム　開始 -->
            <div id="rightColumn">
                <%= link_to("新規登録", "/signup") %>
            </div>
            <!-- 右カラム　終了 -->
        </div>
      
      
      
      
  </body>